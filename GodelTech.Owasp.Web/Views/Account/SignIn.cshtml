@model GodelTech.Owasp.Web.Models.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Sign in";
}

@using (Html.BeginForm("SignIn", "Account", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <h1 class="h3 mb-3 font-weight-normal">Sign in</h1>

    if (ViewBag.Message != null)
    {
        <div class="sign-in-field-validation-error">
            @ViewBag.Message
        </div>
    }

    @Html.TextBoxFor(a => a.Email, new { type = "email", @class = "form-control", placeholder = "Email address" })
    <div class="sign-in-field-validation-error">
        @Html.ValidationMessageFor(a => a.Email)
    </div>

    @Html.TextBoxFor(a => a.Password, new { type = "password", @class = "form-control", placeholder = "Password" })
    <div class="sign-in-field-validation-error">
        @Html.ValidationMessageFor(a => a.Password)
    </div>
    <div class="checkbox mb-3">
        <label>
            @Html.CheckBoxFor(a => a.RememberMe)
            @Html.LabelFor(a => a.RememberMe)
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
}
